<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Splash">
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:gravity">start|center</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="AppTheme.TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Regular">
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="fontFamily">@font/mulish_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.Light">

        <item name="android:fontFamily">@font/mulish_light</item>
        <item name="fontFamily">@font/mulish_light</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>



    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">@dimen/margin10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin10</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin10</item>

    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/margin14</item>
        <item name="cardElevation">@dimen/margin8</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="background">@drawable/button_bg</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="TripButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="background">@drawable/button_bg</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="RequestButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">0dp</item>
        <item name="background">@drawable/green_bg</item>
        <item name="android:background">@drawable/green_bg</item>
        <item name="backgroundTint">@color/green</item>
    </style>
</resources>